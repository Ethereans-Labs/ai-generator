{
	"compilerOptions": {
	  "target": "ES6",                         
	  "module": "commonjs",                   
	  "esModuleInterop": true,                  
	  "allowSyntheticDefaultImports": true,     
	  "strict": true,                          
	  "skipLibCheck": true,                     
	  "forceConsistentCasingInFileNames": true, 
	  "outDir": "./dist",                      
	  "rootDir": "./src"                        
	},
	"include": ["src", "src/types"],            
	"exclude": ["node_modules", "**/*.spec.ts"] 
  }